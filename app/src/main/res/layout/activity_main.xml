<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="410dp"
        android:layout_height="42dp"
        android:layout_marginTop="60dp"
        android:text="APLICACION PARA PROBAR LAS NOTIFICACIONES"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prefrences"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="21dp"
        android:text="Definir preferencias"
        app:layout_constraintBottom_toTopOf="@+id/recuperar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/recuperar"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:text="Recuperar preferencias"
        app:layout_constraintBottom_toTopOf="@+id/avisos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prefrences" />

    <Button
        android:id="@+id/avisos"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Abrir toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recuperar" />

</androidx.constraintlayout.widget.ConstraintLayout>